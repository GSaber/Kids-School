<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/examen2_layout"
    android:background="@drawable/chickentest"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.esprit.kidsschool.fragments.ExamenBisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:paddingTop="50dp"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:id="@+id/examen2_drop_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/examen2_rep_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/examen2_rep1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/repduck" />

            <ImageView
                android:id="@+id/examen2_rep2"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:src="@drawable/repsheep"
                android:layout_below="@id/examen2_rep1" />

            <ImageView
                android:id="@+id/examen2_rep3"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:src="@drawable/repchicken"
                android:layout_below="@id/examen2_rep2" />

        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back_exambis"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/back"/>
    <TextView
        android:id="@+id/tv_name_exambis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33sp"
        android:textColor="#663311"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"/>

</FrameLayout>

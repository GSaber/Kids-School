<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsetting"
    tools:context="com.esprit.kidsschool.fragments.AddChildrenFragment">

    <ImageButton
        android:id="@+id/btn_back_addchild"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/back"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_pic"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/barphoto"
            />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:background="@drawable/barsave"/>

    </LinearLayout>


</FrameLayout>

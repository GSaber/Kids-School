<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundextra"
    tools:context="com.esprit.kidsschool.fragments.MenuFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/back"/>
    <TextView
        android:id="@+id/tv_progress_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#663311"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/linear_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/ranger1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_alphabet"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen1"/>

            <ImageButton
                android:id="@+id/btn_chiffre"
                android:layout_marginLeft="20dp"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen2"
                android:layout_toRightOf="@id/btn_alphabet"/>

            <ImageButton
                android:id="@+id/btn_couleur"
                android:layout_marginLeft="20dp"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen3"
                android:layout_toRightOf="@id/btn_chiffre"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ranger2"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_animaux"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen4"/>

            <ImageButton
                android:id="@+id/btn_forme"
                android:layout_marginLeft="20dp"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen5"
                android:layout_toRightOf="@id/btn_animaux"/>

            <ImageButton
                android:id="@+id/btn_dinausor"
                android:layout_marginLeft="20dp"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/fen6"
                android:layout_toRightOf="@id/btn_forme"/>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

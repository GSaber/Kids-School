<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



        <ImageView
            android:id="@+id/img_children"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:id="@+id/ll_children_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_children"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_children_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="nom"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_children_avancement"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@color/cardview_light_background"
                android:shadowColor="@color/cardview_shadow_end_color"/>

            <TextView
                android:id="@+id/tv_children_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="note"
                android:textColor="@color/cardview_light_background"
                android:shadowColor="@color/cardview_shadow_end_color"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>


        </LinearLayout>


</RelativeLayout>